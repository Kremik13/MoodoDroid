<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/add_mood_image"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:src="@drawable/minimalist_mountain"
            android:scaleType="centerCrop"
            />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    >
                    <ImageButton
                        android:id="@+id/very_sad_mood_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mood_very_bad"
                        android:elevation="8dp"
                        />
                    <ImageButton
                        android:id="@+id/sad_mood_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mood_bad"
                        android:elevation="8dp"
                        />
                    <ImageButton
                        android:id="@+id/neutral_mood_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mood_neutral"
                        android:elevation="8dp"
                        />
                    <ImageButton
                        android:id="@+id/happy_mood_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mood_happy"
                        android:elevation="8dp"
                        />
                    <ImageButton
                        android:id="@+id/very_happy_mood_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_mood_very_happy"
                        android:elevation="8dp"
                        />
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:padding="16dp"
                    app:cardCornerRadius="4dp"
                    android:id="@+id/card_view">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/text_view"/>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_gravity="bottom|center_horizontal"
             android:layout_margin="16dp"
             >
             <Button
                 android:id="@+id/add_mood_tags_button"
                 android:layout_width="match_parent"
                 android:padding="16dp"
                 android:layout_height="wrap_content"
                 android:layout_gravity="top|left"
                 android:text="@string/add_tags_button"/>
             <Button
                 android:id="@+id/add_mood_button"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:backgroundTint="@color/colorAccent"
                 android:textColor="@color/black"
                 android:text="@string/add_mood_add_button"/>
         </LinearLayout>
</FrameLayout>